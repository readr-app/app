{
    "hosting": {
        "public": ".",
        "ignore": [
            ".*",
            "*.json",
            "node_modules",
            "README.md",
            "yarn.lock"
        ],
        "trailingSlash": false,
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "index.html",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache"
                    }
                ]
            }
        ]
    }
}
