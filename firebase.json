{
    "hosting": {
        "public": "./dist",
        "ignore": ["*.json"],
        "trailingSlash": false,
        "rewrites": [{
            "source": "**",
            "destination": "/index.html"
        }],
        "headers": [{
            "source" : "*.@(js|png|ico|webmanifest)",
            "headers" : [ {
                "key" : "Cache-Control",
                "value" : "no-cache"
            }]
        }, {
            "source": "index.html",
            "headers" : [ {
                "key" : "Cache-Control",
                "value" : "no-cache"
            }]
        }]
    }
}
