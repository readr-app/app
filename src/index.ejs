<!doctype html>
<html lang="en">
    <head>
        <% if (htmlWebpackPlugin.options.shouldIncludeTracking) { %>
            <link rel="dns-prefetch" href="https://www.google-analytics.com">
            <link rel="preconnect" href="https://www.google-analytics.com" crossorigin="anonymous">
        <% } %>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, minimal-ui">
        <meta name="robots" content="noindex, nofollow, noarchive">
        <meta name="description" content="<%= htmlWebpackPlugin.options.manifest.description %>">
        <title>
            <%= htmlWebpackPlugin.options.manifest.name %> |
            <%= htmlWebpackPlugin.options.manifest.description %></title>
        <link rel="manifest" href="/manifest.webmanifest">
        <meta name="twitter:card" content="summary">
        <meta name="twitter:site" content="@__readr__">
        <meta name="twitter:title" content="<%= htmlWebpackPlugin.options.manifest.name %>">
        <meta name="twitter:description" content="<%= htmlWebpackPlugin.options.manifest.description %>">
        <meta name="twitter:image" content="<%= htmlWebpackPlugin.options.manifest.icons
            .find(icon => icon.src.endsWith('512.png')).src %>">
        <% if (htmlWebpackPlugin.options.shouldIncludeTracking) { %>
            <script src="https://www.google-analytics.com/analytics.js" async></script>
        <% } %>
    </head>
    <body>
        <div id="readr"></div>
    </body>
</html>
